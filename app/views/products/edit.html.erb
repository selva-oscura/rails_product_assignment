<h1>Edit Product Information</h1>
<form action='/products/<%= @product.id %>' method='post'>
	<label>Name:</label><br /><input type='text' name='product[name]' value='<%= @product.name %>' /><br />
	<label>Description:</label><br /><textarea name='product[description]' style='width: 138px; height: 100px;' /><%= @product.description %></textarea><br />
	<label>Price:</label><br /><input type='text' name='product[pricing]' value='<%= @product.pricing %>' /><br />
	<input type='hidden' name='_method' value='put'>
	<input type='submit' value='Update' />
</form>
<p><a href='/products/'><button type='button' class='btn btn-primary'>Return to Index</a></p>
<p><a href='/products/<%=@product.id%>'><button type='button' class='btn btn-info'>Return to View Product</a></p>
