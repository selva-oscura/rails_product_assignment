<%= simple_form_for(@product, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :name, :input_html => { :class => "span6" }, label: "Name" %>
  <%= f.input :description, :input_html => { :class => "span6" }, label: "Description" %>
  <%= f.input :pricing, :input_html => { :class => "span6" }, label: "Price" %>
  <%= f.button :submit, :class => 'btn btn-success', label: "Submit" %>
<% end %>

